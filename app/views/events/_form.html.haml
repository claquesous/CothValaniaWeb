= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :points
    = f.number_field :points
  .field
    = f.label :remarks
    = f.text_field :remarks
  .field
    = f.label :hidden
    = f.check_box :hidden
  .field
    = f.label :time
    = f.time_select :time
  .actions
    = f.submit 'Save'
