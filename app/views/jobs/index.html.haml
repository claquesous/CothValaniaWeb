- content_for :title do
  = @config.jobs.pluralize

%h1.valigned= @config.jobs.pluralize
.pull-right
  = link_to "New #{@config.jobs.singularize}", new_job_path, class: "btn btn-success"

%table.table.table-condensed
  %tr
    %th Name
    %th Short name
    %th Remarks
    %th
    %th

  - @jobs.each do |job|
    %tr
      %td= link_to job.name, job
      %td= job.short_name
      %td= job.remarks
      %td= link_to 'Edit', edit_job_path(job), class: "btn btn-info"
      %td= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"

%br

