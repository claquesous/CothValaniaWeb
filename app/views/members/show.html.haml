%p#notice= notice

%p
  %b Name:
  = @member.name
%p
  %b Join date:
  = @member.join_date
%p
  %b Points:
  = @member.points
%p
  %b Url:
  = @member.url
%p
  %b Remarks:
  = @member.remarks
%p
  %b Active:
  = @member.active
%p
  %b Admin:
  = @member.admin
%p
  %b Reward cycle:
  = @member.reward_cycle
%p
  %b Cycle date:
  = @member.cycle_date

%table
  %tr
    %th Name
    %th Points
    %th Remarks
    %th Sex
    %th Race
    - @jobs.each do |j|
      %th= j.name
  - @member.characters.each do |c|
    %tr
      %td= c.name
      %td= c.points
      %td= c.remarks
      %td= c.sex
      %td= c.race.name unless c.race.nil?
      - @jobs.each do |j|
        %td= c.jobs.include?(j)

= link_to 'Edit', edit_member_path(@member)
\|
= link_to 'Back', members_path
