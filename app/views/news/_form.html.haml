= form_for @news do |f|
  - if @news.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news.errors.count, "error")} prohibited this news from being saved:"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg

  .form-horizontal
    .control-group.field
      .control-label= f.label :text
      .controls= f.text_area :text, rows: 5
    .form-actions
      = f.submit 'Save', class: "btn btn-primary"
      - if @news.persisted?
        = link_to 'Cancel', @news, class: "btn btn-danger"
      - else
        = link_to 'Cancel', news_index_path, class: "btn btn-danger"
