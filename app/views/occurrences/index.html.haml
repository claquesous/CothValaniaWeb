- content_for :title do
  = @event.name + " " + @config.occurrences.pluralize

%h1.valigned= @config.occurrences.pluralize
.pull-right
  - if admin?
    = link_to "New #{@event.name} #{@config.occurrences.singularize}", new_event_occurrence_path(@event), class: "btn btn-success"
  = link_to "Back", event_path(@event), class: "btn btn-primary"

%table.table.table-condensed
  %tr
    %th #{@config.events.singularize}
    %th Remarks
    %th Start time
    %th End time
    %th Success
    %th Optional
    - if admin?
      %th
      %th

  - @occurrences.each do |occurrence|
    %tr
      %td= link_to @event.name, event_occurrence_path(@event,occurrence)
      %td= occurrence.remarks
      %td= occurrence.start_time
      %td= occurrence.end_time
      %td
        -if occurrence.success
          %i.icon-ok
      %td
        -if occurrence.optional
          %i.icon-ok
      - if admin?
        %td= link_to 'Edit', edit_event_occurrence_path(@event,occurrence), class: "btn btn-info"
        %td= link_to 'Destroy', event_occurrence_path(@event,occurrence), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"

%br

