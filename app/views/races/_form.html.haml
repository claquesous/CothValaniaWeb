= form_for @race do |f|
  - if @race.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race.errors.count, "error")} prohibited this race from being saved:"
      %ul
        - @race.errors.full_messages.each do |msg|
          %li= msg

  .form-horizontal
    .control-group.field
      .control-label= f.label :name
      .controls= f.text_field :name
    .control-group.field
      .control-label= f.label :remarks
      .controls= f.text_field :remarks
    .form-actions
      = f.submit 'Save', class: "btn btn-primary"
      - if @race.persisted?
        = link_to 'Cancel', @race, class: "btn btn-danger"
      - else
        = link_to 'Cancel', races_path, class: "btn btn-danger"
