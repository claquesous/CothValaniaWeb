%p#notice= notice

%p
  %b Name:
  = @reward.name
%p
  %b External value:
  = @reward.external_value
%p
  %b Remarks:
  = @reward.remarks
%p
  %b Obtained From:
  - @reward.events.visible.each do |e|
    = link_to e.name, event_path(e)


=render 'list', :reward => @reward

- if leader?
  = link_to 'Edit', edit_reward_path(@reward)
  \|
= link_to 'Back', rewards_path
