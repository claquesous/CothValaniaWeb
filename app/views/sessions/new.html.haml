%h1 Log In

= form_tag login_path do
  .well
    .form-horizontal
      .control-group.field
        .control-label= label_tag :member, @config.members.singularize
        .controls= text_field_tag :member, params[:member]
      .control-group.field
        .control-label= label_tag :password
        .controls= password_field_tag :password
      .form-actions
        = submit_tag "Log In", class: "btn btn-primary"
    
