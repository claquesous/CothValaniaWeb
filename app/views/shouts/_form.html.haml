= form_for @shout do |f|
  - if @shout.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shout.errors.count, "error")} prohibited this shout from being saved:"
      %ul
        - @shout.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
