%h1 Listing shouts

%table
  %tr
    %th Text
    %th Date
    %th Character
    %th
    - if admin?
      %th
      %th

  - @shouts.each do |shout|
    %tr
      %td= shout.text
      %td= shout.date
      %td= shout.member.name
      %td= link_to 'Show', shout
      - if admin?
        %td= link_to 'Edit', edit_shout_path(shout)
        %td= link_to 'Destroy', shout, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Shout', new_shout_path
